<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.Translucent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CmText">
        <item name="android:textColor">@color/cm_text_color</item>
    </style>

    <style name="CmCalendarRow">
        <item name="android:layout_marginTop">0.5dp</item>
        <item name="android:paddingTop">0.5dp</item>
        <item name="android:paddingLeft">0.5dp</item>
        <item name="android:paddingRight">0.5dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <declare-styleable name="CmDateView">
        <attr name="card_main_image" format="reference"/>
        <attr name="card_title" format="string"/>
        <attr name="card_sub_title" format="string"/>
    </declare-styleable>
</resources>
