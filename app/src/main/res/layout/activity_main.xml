<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity_"
    >

    <EditText
        android:id="@+id/action_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="したことを入力してね"
        android:layout_marginTop="150dp"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="検索"
        android:gravity="center|center"
        android:drawableLeft="@drawable/ic_search"
        android:layout_below="@id/action_name"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/commit_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:gravity="center|center"
        android:drawableLeft="@drawable/ic_done"
        android:layout_below="@id/search"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/take_a_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写真を取る"
        android:gravity="center|center"
        android:drawableLeft="@drawable/ic_camera"
        android:layout_below="@id/commit_action"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/show_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="カレンダーを表示"
        android:gravity="center|center"
        android:drawableLeft="@drawable/ic_calendar"
        android:layout_below="@id/take_a_picture"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/show_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="アニメーション"
        android:gravity="center|center"
        android:layout_below="@id/show_calendar"
        android:layout_alignParentLeft="true"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_green_field"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
